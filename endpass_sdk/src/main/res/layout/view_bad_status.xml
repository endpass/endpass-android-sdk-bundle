<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:fillViewport="true"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/errorIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:progress="100"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_warning" />


    <TextView
        android:id="@+id/errorTv"
        style="@style/LightTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_android_margin"
        android:layout_marginEnd="@dimen/default_android_margin"
        android:text="The ID Card has the status Not readable, please upload it again"
        android:textColor="@color/colorPrimaryText"
        android:letterSpacing="0.02"
        android:lineSpacingExtra="3sp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/errorIv"
        app:layout_constraintTop_toTopOf="@+id/errorIv" />


    <TextView
        android:id="@+id/reuploadTv"
        style="@style/MediumTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_android_margin"
        android:layout_marginStart="35dp"
        android:letterSpacing="0.12"
        android:lineSpacingExtra="2sp"
        android:text="@string/reupload_text"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/hideTv"
        style="@style/MediumTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_android_margin"
        android:layout_marginStart="35dp"
        android:letterSpacing="0.12"
        android:lineSpacingExtra="2sp"
        android:text="@string/hide_text"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/reuploadTv" />

</androidx.constraintlayout.widget.ConstraintLayout>