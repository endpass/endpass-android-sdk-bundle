<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">


    <endpass.android.endpass_sdk.presentation.custom.ValutInputField
        android:id="@+id/passInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_android_margin"
        app:hint="@string/enter_your_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/changePassTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:letterSpacing="0.09"
        android:lineSpacingExtra="2sp"
        android:paddingTop="8dp"
        android:paddingStart="@dimen/default_android_margin"
        android:paddingEnd="@dimen/default_android_margin"
        android:paddingBottom="@dimen/default_android_margin"
        android:text="@string/forgot_your_password"
        android:textColor="#792bef"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/passInputLayout"
        app:layout_constraintStart_toStartOf="@+id/passInputLayout"
        app:layout_constraintTop_toBottomOf="@+id/passInputLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>