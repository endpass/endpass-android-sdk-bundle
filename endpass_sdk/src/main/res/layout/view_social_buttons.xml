<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/signInTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center"
        android:paddingStart="@dimen/default_android_margin"
        android:paddingEnd="@dimen/default_android_margin"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="@string/or_sign_in_with"
        android:textColor="@color/colorTextSecondary"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="0.53dp"
        android:layout_marginStart="@dimen/default_android_margin"
        android:background="#D5D9E0"
        app:layout_constraintBottom_toBottomOf="@+id/signInTv"
        app:layout_constraintEnd_toStartOf="@+id/signInTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/signInTv" />


    <View
        android:layout_width="0dp"
        android:layout_height="0.53dp"
        android:layout_marginEnd="@dimen/default_android_margin"
        android:background="#D5D9E0"
        app:layout_constraintBottom_toBottomOf="@+id/signInTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/signInTv"
        app:layout_constraintTop_toTopOf="@+id/signInTv" />

    <Button
        android:id="@+id/googleBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_android_margin"
        android:background="@drawable/rectangle_button"
        android:letterSpacing="0.08"
        android:padding="8dp"
        android:text="@string/google"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/githubBtn"
        app:layout_constraintTop_toBottomOf="@+id/signInTv" />

    <Button
        android:id="@+id/githubBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_android_margin"
        android:background="@drawable/rectangle_button"
        android:letterSpacing="0.08"
        android:text="@string/google"
        app:layout_constraintLeft_toRightOf="@+id/googleBtn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signInTv" />


    <View
        android:layout_width="0dp"
        android:layout_height="0.53dp"
        android:layout_marginStart="@dimen/default_android_margin"
        android:layout_marginEnd="@dimen/default_android_margin"
        android:layout_marginTop="24dp"
        android:background="#D5D9E0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/googleBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>