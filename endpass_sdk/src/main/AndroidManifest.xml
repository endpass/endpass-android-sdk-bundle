            android:screenOrientation="portrait" />

        <activity
            android:name="endpass.android.endpass_sdk.presentation.ui.document.DocumentActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="endpass.android.endpass_sdk.presentation.ui.document.CameraActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.ui.result.RequestActivity"
            android:screenOrientation="portrait" />


        <activity
            android:name="endpass.android.endpass_sdk.presentation.ui.cropper.CropperActivity"
            android:screenOrientation="portrait" />

        <activity
